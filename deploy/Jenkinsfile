pipeline {
    agent any
  //paramters
parameters {
        //string parameter
        string(name: 'Greeting', defaultValue: 'Hello', description: 'How should I greet the world?')
        //choice paramter
        choice(name: 'Stage', choices: ['dev', 'test', 'uat'], description: 'Deployment Stage')
    }
    //stages of build
    stages {
      stage('Init') {
            steps {
                echo "${params.Greeting} World!"
                echo "${params.Stage} mode"
            }
        }
        stage('Build') {
            steps {
                sh '''#!/bin/bash
                echo "The test is running in ${params.Stage} mode"
                ls
                bash hw.sh
                exit
                '''
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
    }
}